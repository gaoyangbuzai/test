/* pages/allgoods/index.wxss */
@import "../template/prolist/prolist.wxss";
page{font-size:14px;}
.container{padding-top:168rpx;} 
.all-header{display: flex;height:88rpx;width:100%;align-items: center;background:#fff;position: fixed;top:0;left:0;right:0;}
.all-header .all-header-left{padding:0 12rpx 0 32rpx;text-align: center;}
.all-header-left .all-remark{width:24rpx;height:24rpx;border-left:4rpx solid #999;border-bottom:4rpx solid #999;transform: rotate(45deg);}
.all-header .all-header-body{flex:1;background:#EFEFEF;border-radius: 12rpx;}
.all-header-body .allgood-search{display: flex;align-items: center;padding:0 20rpx;}
.all-header-body .placeholder{color:#CCCCCC;}
.allgood-search .icon{color:#b4b4b4;}
.allgood-search input{flex:1;padding:0 10rpx;height:56rpx;color:#3D4145;}
.all-header .all-header-right .icon{padding-right:12rpx;text-align: center;font-size:28px;color:#999999;}
.all-content{background:#f9f9f9;}
.content-empty{color:#ccc;font-size:18px;position: fixed;top:170rpx;background:#FAFAFA;bottom:0;left:0;right:0;text-align: center;padding-top:120rpx;}
.content-empty .icon{font-size:200rpx;color:#ccc;}

.all-sort{position: fixed;top:88rpx;left:0;right:0;box-sizing:border-box;height:80rpx;line-height:80rpx;display: flex;width:100%;align-items: center; background: #fff;border-top:1px solid #ECECEC;border-bottom:1px solid #ececec;}
.all-sort .sort-item{flex: 1;text-align: center;border-left:1px solid #e7e7e7;color:#666666;}
.all-sort .sort-item.on{color:#fd5454;}
.all-sort .sort-item:first-child{border-left:0;}
.all-sort .sort-item view{display: inline-block;}
.all-sort .sort-item .sorting{width:20rpx;height:20rpx;position: relative;}
.all-sort .sort-item .sorting text{position:absolute;border:10rpx solid transparent;height:0;}
.all-sort .sort-item .sorting .caret-up{border-bottom-color:#666;top:-12rpx;}
.all-sort .sort-item .sorting .caret-up.on{border-bottom-color:#EF4F4F;}
.all-sort .sort-item .sorting .caret-down{border-top-color:#666;top:15rpx;}
.all-sort .sort-item .sorting .caret-down.on{border-top-color:#EF4F4F;}
.all-sort .sort-item .filter{font-size:20px;margin-left:6rpx;vertical-align: middle;}

.fui-mask{position: fixed;top:168rpx;left:0;right:0;bottom:0;background:rgba(0,0,0,0.8);z-index:10;}
.screen{position: fixed;z-index:11;top:168rpx;height:240rpx;background:#FFFFFF;left:0;right:0;}
.screen .attribute{text-align: center;display: flex;justify-content: space-between;flex-wrap: wrap;color:#999999;}
.screen .attribute .attr-item{width:220rpx;display: inline-block;height:52rpx;line-height:52rpx;margin:13rpx auto;border:1px solid #999999;border-radius:10rpx;}
.screen .attribute .attr-item .icon{display: none;}
.screen .attribute .attr-item.on{color:#fd5454;border-color:#fd5454;}
.screen .attribute .attr-item.on .icon{display: inline-block;}
.screen .btns{display: flex;align-items: center;justify-content: space-between;padding:16rpx;font-size:16px;}
.screen .btns view{padding:0 12rpx;}
.screen .btns .cancle{color:#999;}
.screen .btns .confirm{color:#fd5454;}