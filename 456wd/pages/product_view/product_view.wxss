/* 底部模块 */
.view-footer{font-size:12px;position:fixed;bottom:0;display: flex;align-items: center;width:100%;text-align: center;height:100rpx;background: #fff;}
.view-footer .view-nav{width:40%;display: flex;color:#999;}
.view-footer .view-nav .iconfont{font-size:40rpx;}
.view-footer .view-nav .guanzhu{flex:1;}
.view-footer .view-nav .dianpu{flex:1;}
.view-footer .view-nav .gouwuche{flex:1;position:relative;}
.view-footer .view-nav .gouwuche .cart-pro-num{position: absolute;left:60%;font-size:22rpx;width:28rpx;height:28rpx;background:#f00;line-height:28rpx;color:#fff;top:-8rpx;border-radius: 50%;}
.view-footer .buy-type{width:60%;display: flex;}
.view-footer .buy-type view{flex:1;color:#fff;height:100rpx;line-height:100rpx;}
.view-footer .buy-type .addCart{background:#fe9402;}
.view-footer .buy-type .buyOnce{background: #fd5555;}
